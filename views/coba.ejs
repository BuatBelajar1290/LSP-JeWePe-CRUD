          <h2 class="text-center mb-4 text-center">Input Page</h2>
          <div class="container form-login border">
              <div class="row mt-5 justify-content-center">
              <div class="col-md-6">
                <form action="/input-komentar" method="post">
                  <div class="form-group">
                      <label for="komentar-nama">Nama</label>
                      <input type="text" class="form-control" name="komentarNama" placeholder="Masukkan Nama Anda">
                  </div>
                  
                  <div class="form-group">
                    <label for="komentar-email">Email</label>
                    <input type="text" class="form-control" name="komentarEmail" placeholder="Masukkan Email Andai">
                </div>
  
                  <div class="form-group">
                      <label for="komentar">Komentar</label>
                  <div class="form-group">
                      <textarea class="form-control" rows="4" name="komentar" placeholder="Masukkan Komentar"></textarea>
                  </div>
                 
                  <button type="submit" class="btn btn-primary" name="id" value="">Submit</button>
                  
                </form>
              </div>
              </div>
          </div>
    </main>

