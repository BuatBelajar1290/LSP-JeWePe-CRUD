    <main>
          <h2 class="text-center">komentar</h2>
          <% for (let komentar of komentars) { %>
          <div class="row">
            <div class="" style="padding-top: 3rem;">
              <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h6 class="card-title">Nama : <%= komentar.nama %></h6>
                    <h6 class="card-title">Email  : ini email</h6>
